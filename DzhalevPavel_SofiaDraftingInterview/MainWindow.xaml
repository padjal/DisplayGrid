<Window x:Class="DzhalevPavel_SofiaDraftingInterview.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DzhalevPavel_SofiaDraftingInterview"
        mc:Ignorable="d"
        Title="Display Data" Height="450" Width="800" 
        FontSize="18" FontFamily="Montserrat Medium">
    <Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
		</Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
	        <RowDefinition Height="Auto"></RowDefinition>
		</Grid.RowDefinitions>

        <DataGrid Name="UsersGrid"
	        Grid.Column="0" Grid.Row="0"></DataGrid>
        <Button Name="ImportButton" Grid.Column="0" Grid.Row="1"
                Background="CornflowerBlue" Click="OnImport"
                Width="105" HorizontalAlignment="Right"
                Margin="5">Import</Button>
	</Grid> 

</Window>
